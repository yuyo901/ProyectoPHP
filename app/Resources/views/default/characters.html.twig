{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-md-10 col-md-offset-1">
            <div class="panel panel-success">
                <div class="panel-heading">Lista de hoteles ciudad de Panamá</div>

                  <table class="table">
                      <tr>
                          <th>Hotel</th>
                          <th>Dirección</th>
                      </tr>

                      {% for character in characters %}
                        <tr>
                          <td>{{ character.hotel }}</td><td>{{ character.direccion }}</td>
                        </tr>
                      {% endfor %}
                  </table>

            </div>

            
        </div>
    </div>
</div>
{% endblock %}