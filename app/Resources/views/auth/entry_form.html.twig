{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
    <div class="container">
        <div class="form-header">
            <h2 class="form-title"></h2>
        </div>

        {% if app.user != null %}
        <div class="row">
            <div class="col-sm-12 form-main">
                {% for label, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="bg-{{ label }}">
                            {{ message }}
                        </div>
                    {% endfor %}
                {% endfor %}

                {{ form_start(form) }}
                    <div class="col-md-12">
                        <div class="form-group col-md-4">
                            {{ form_row(form.name) }}
                        </div>
                        <div class="form-group col-md-4">
                            {{ form_row(form.realname) }}
                        </div>
                        <div class="form-group col-md-12">
                            {{ form_row(form.body) }}
                        </div>
                        <div class="form-group col-md-4 pull-right">
                            {{ form_widget(form.create) }}
                        </div>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
        {% endif %}

        {% if app.user == null %}
              <a href="/login" class="btn btn-info"> Necesitas identificarte para ver el formulario </a>
        {% endif %}

    </div>
{% endblock %}